# streamlit run CMSE830HW1.py

df_form = px.data.iris()
fig = px.scatter_3d(df_form, x = 'sepal_length', y = 'sepal_width', z = 'petal_width', color='petal_length', symbol='species', size_max = 18, opacity=0.7)
st.plotly_chart(fig)
